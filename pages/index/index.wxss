.banner {
    width: 100%;
    height: 380rpx;
}

.funcs {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: 30rpx;
}

.funcs .func {
    width: 25%;
    text-align: center;
    margin-bottom: 30rpx;
}

.funcs .func image {
    width: 100rpx;
    height: 100rpx;
    text-align: center;

}

.funcs .func .name {
    text-align: center;
    color: #666666;
    font-size: 26rpx;
    margin-top: 10rpx;
}

.maylike {
    padding: 0 30rpx;
}

.title {
    color: #333;
    font-size: 38rpx;
    font-weight: 700;
    padding: 20rpx 0;
    display: flex;
    align-items: baseline;
}

.notice {
    display: flex;
    padding: 20rpx 0;
}

.notice-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.notice-swiper {
    flex: 1;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666;
}

.recom {
    overflow-x: auto;
    padding-bottom: 20rpx;
}

.recom-item {
    width: 200rpx;
    position: relative;
    overflow: hidden;
}

.recom-item+.recom-item {
    margin-left: 24rpx;
}

.recom-item image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.more {
    color: #FD960D;
    font-size: 24rpx;
    margin-left: auto;
    font-weight: 0;
}

.recom-item-name {
    font-size: 28rpx;
    color: #454545;
}

