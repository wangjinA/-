	<van-cell title="联系人" value="沐女士" size="small" />
	<van-cell title="手机号" value="15270848182" size="small" />
  <van-field input-align="right" size="small" value="{{ message }}" label="备注" type="textarea" placeholder="仅自己可见" rows="1" autosize />
