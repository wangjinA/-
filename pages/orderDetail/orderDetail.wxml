<view class="order-detail">
	<view class="hotel-info">
		<view class="hotel-img">
			<image src="/images/hotel/hotel3.jpg"></image>
		</view>
		<view class="flex-col name-wrap">
			<view class="hotel-name">南昌国际大酒店</view>
			<view class="order-time">6月1号至6月8号 共7天</view>
		</view>
	</view>
	<van-cell title="人数类型" value="100人 | 公司培训" size="small" />
	<van-cell title="位置要求" value="南昌" size="small" />
	<van-cell title="报价截至" value="2020-05-23" size="small" />
