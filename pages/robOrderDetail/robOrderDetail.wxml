<footerButton bindtap="shangchuan" wx:if="{{(status==4 || status==5) && isUser}}">{{ status==4 ? '上传消费单' : '重新上传消费单'}}
</footerButton>
<footerButton bindtap="orderOver" wx:if="{{status==5 && data.orderDemandId && data.receive}}">确认订单完成</footerButton>
