
.user-avatar {
  width: 90rpx;
  width: 90rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.user-avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.user-header {
  height: 150rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background-color: #fff;
}
.user-header + .user-header{
  border-top: 1rpx solid #ebedf0;
}
.user-name {
  font-size: 32rpx;
}
.gs-name{
  font-size: 28rpx;
  color: #999;
}
.t-info{
  margin-left: auto;
}
.addScore{
  color: #07c160;
  font-size: 28rpx;
}
.overOrder{
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: baseline;
}
.createTime{
  font-size: 26rpx;
  color: #ababab;
  margin-left: 8rpx;
}