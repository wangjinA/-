.msg-list{
  display: flex;
  flex-direction: column;
}
.msg-item{
  display: flex;
  height: 140rpx;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}
.msg-avatar{
  flex-shrink: 0;
  margin-right: 24rpx;
  position: relative;
}
.avatar-img{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.msg-item .msg-info{
  border-bottom: 1rpx solid #e1e1e1;
}
.msg-info{
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  flex: 1;
  width: 0;
}
.msg-name{
  flex: 1;
  width: 0;
}
.msg-text{
  font-size: 28rpx;
  color: #999;
}
.info-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.msg-time{
  font-size: 24rpx;
  color: #999;
}

.noRead{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  font-size: 24rpx;
  border-radius: 50%;
  background-color: red;
  width: 35rpx;
  height: 35rpx;
  text-align: center;
  line-height: 35rpx;
  color: #fff;
}